form(method='post', action='/post' class="form-horizontal").
        <div class="form-group">
           <label class="col-md-1 control-label" for="title">标题</label>
           <div class="col-md-10">
               <input type="text" class="form-control" id="title" name="title" placeholder = "标题">
           </div>
        </div>   
        <div class="form-group">   
           <label class="col-md-1 control-label" for="content">内容</label>
           <div class="col-md-10">
               <textarea class="form-control" rows="2" name = "post" ></textarea>
           </div>
           <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-plus-sign"></span></button>
        </div>
        