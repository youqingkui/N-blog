extends layout

block content
  if error
    div.alert.alert-danger= error
  else if success
    div.alert.alert-success= success
  p
    span
      a(href="/edit/" + post.name + "/" + post.time.day + "/" + post.title) 编辑
      |      
    span
      a(href="/delete/" + post.name + "/" + post.time.day + "/" + post.title) 删除
  p.info
    | 作者:
    a(href="/u/" + post.name)= post.name
    |  日期:
    = post.time.day
  p!=post.post
  
  include comment