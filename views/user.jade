extends layout

block content
  div.row
    each p in posts
      div.col-md-4
        h2
          a(href="/u/" + p.name + "/" + p.time.day + "/" + p.title)= p.title
        p.info
          | 作者:
          a(href="/u/" + p.name)= p.name
          |  |日期:
          =p.time.minute
        p!= p.post